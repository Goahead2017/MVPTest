<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.bignerdranch.android.practicemvp.DrawView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:Wave_color="@color/blueSky"
        android:background="@drawable/bluesky"
        android:id="@+id/diy">
    </com.bignerdranch.android.practicemvp.DrawView>

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:layout_centerVertical="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="20dp"
        android:hint="请输入学号"
        android:singleLine="true"/>

    <com.bignerdranch.android.practicemvp.TogglePasswordVisibilityEditText
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:layout_below="@+id/et1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:hint="请输入身份证后六位"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="36dp"
        android:src="@drawable/user_03"
        android:id="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et2"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginBottom="8dp"
        android:src="@drawable/password_03" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/et2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/progress"
        android:background="@color/blueSky"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="登录"
        android:textSize="14sp"/>


</RelativeLayout>
